/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";

			#address-cells = <1>;
			#size-cells = <0>;

			/* Minimal SPI device node: 'test_mini@0' on CE0 */
			test_mini@0 {
				compatible = "mytest,mini";
				reg = <0>;       /* use CE0 */
				spi-max-frequency = <1000000>;

				/* Optional: reference any GPIOs if needed for DC/reset,
				   but we'll skip that for pure minimal. */
			};
		};
	};
};
