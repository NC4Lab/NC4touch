/*
 * Device Tree overlay for ILI-9488
 *
 */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			pitft_pins: pitft_pins {
				brcm,pins = <24 25 18>;
				brcm,function = <1 1 1>; /* out out out */
			};
		};
	};

	fragment@3 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			pitft0: pitft@0 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft_pins>;

				reg = <0>;  /* CE0: Chip Select for LCD_0 */
				spi-max-frequency = <128000000>;

				rotation = <0>;
				reset-gpios = <&gpio 24 0>; /* LCD_0 RESET */
				dc-gpios = <&gpio 25 0>;    /* LCD_0 DC */
				backlight = <&backlight>;
			};

			pitft1: pitft@1 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft_pins>;

				reg = <1>;  /* CE1: Chip Select for LCD_1 */
				spi-max-frequency = <128000000>;

				rotation = <0>;
				reset-gpios = <&gpio 23 0>; /* LCD_1 RESET */
				dc-gpios = <&gpio 27 0>;    /* LCD_1 DC */
				backlight = <&backlight>;
			};
		};
	};

	fragment@4 {
		target-path = "/soc";
		__overlay__ {
			backlight: backlight {
				compatible = "gpio-backlight";
				gpios = <&gpio 18 0>;
			};
		};
	};

	__overrides__ {
		speed = <&pitft>,"spi-max-frequency:0";
		rotation = <&pitft>,"rotation:0";
	};
};
