/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";
		};
	};

	fragment@1 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	/* Pin configuration for first display */
	fragment@2 {
		target = <&gpio>;
		__overlay__ {
			pitft_pins: pitft_pins {
				brcm,pins = <24 25 18>; /* LCD_0 pins: RESET=24, DC=25, BL=18 */
				brcm,function = <1 1 1>; /* all output */
			};
		};
	};

	/* Pin configuration for second display */
	fragment@5 {
		target = <&gpio>;
		__overlay__ {
			pitft1_pins: pitft1_pins {
				brcm,pins = <23 27>;  /* LCD_1 pins: RESET=23, DC=27 */
				brcm,function = <1 1>; /* all output */
			};
		};
	};

	fragment@3 {
		target = <&spi0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			/* Node for first display */
			pitft: pitft@0 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft_pins>;

				reg = <0>;
				spi-max-frequency = <128000000>;

				rotation = <0>;
				reset-gpios = <&gpio 24 0>;
				dc-gpios = <&gpio 25 0>;
				backlight = <&backlight>;
			};

			/* Node for second display */
			pitft1: pitft@1 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft1_pins>;

				reg = <1>;
				spi-max-frequency = <128000000>;

				rotation = <0>;
				reset-gpios = <&gpio 23 0>;
				dc-gpios = <&gpio 27 0>;
				backlight = <&backlight>;
			};
		};
	};

	fragment@4 {
		target-path = "/soc";
		__overlay__ {
			backlight: backlight {
				compatible = "gpio-backlight";
				gpios = <&gpio 18 0>;
			};
		};
	};

	__overrides__ {
		speed = <&pitft>,"spi-max-frequency:0";
		rotation = <&pitft>,"rotation:0";
	};
};
