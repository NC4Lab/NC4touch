/********************************************************************************
 * nc4_ili9488.dts
 * 
 * Device Tree Overlay for three ILI9488 panels on Raspberry Pi's SPI1 bus.
 * - Disables spidev1.0 (CS0), spidev1.1 (CS1), and spidev1.2 (CS2).
 * - Creates three SPI child nodes: pitft0@0 (CE0), pitft1@1 (CE1), and pitft2@2 (CE2).
 * - Each panel has its own Reset and DC lines.
 * - Shared backlight on GPIO27.
 *
 * Compatible usage:
 *   dtoverlay=nc4_ili9488
 ********************************************************************************/
 /dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	/****************************************************************************
	 * Enable SPI1 hardware
	 ****************************************************************************/
	fragment@0 {
		target = <&spi1>;
		__overlay__ {
			status = "okay";
		};
	};

	/****************************************************************************
	 * Disable spidev (SPI1, CS0)
	 ****************************************************************************/
	fragment@1 {
		target = <&spidev1_0>;
		__overlay__ {
			status = "disabled";
		};
	};

	/****************************************************************************
	 * Disable spidev (SPI1, CS1)
	 ****************************************************************************/
	fragment@2 {
		target = <&spidev1_1>;
		__overlay__ {
			status = "disabled";
		};
	};

	/****************************************************************************
	 * Disable spidev (SPI1, CS2)
	 ****************************************************************************/
	fragment@3 {
		target = <&spidev1_2>;
		__overlay__ {
			status = "disabled";
		};
	};

	/****************************************************************************
	 * GPIO pins for the LCD_0 panel (pitft0)
	 *   GPIO24 = RESET (out)
	 *   GPIO25 = DC (out)
	 *   GPIO27 = Backlight (out, shared)
	 ****************************************************************************/
	fragment@4 {
		target = <&gpio>;
		__overlay__ {
			pitft0_pins: pitft0_pins {
				brcm,pins = <24 25>;
				brcm,function = <1 1>; /* Set as output */
			};
		};
	};

	/****************************************************************************
	 * GPIO pins for the LCD_1 panel (pitft1)
	 *   GPIO23 = RESET (out)
	 *   GPIO22 = DC (out)
	 *   GPIO27 = Backlight (out, shared)
	 ****************************************************************************/
	fragment@5 {
		target = <&gpio>;
		__overlay__ {
			pitft1_pins: pitft1_pins {
				brcm,pins = <23 22>;
				brcm,function = <1 1>; /* Set as output */
			};
		};
	};

	/****************************************************************************
	 * GPIO pins for the LCD_2 panel (pitft2)
	 *   GPIO13 = RESET (out)
	 *   GPIO12 = DC (out)
	 *   GPIO27 = Backlight (out, shared)
	 ****************************************************************************/
	fragment@6 {
		target = <&gpio>;
		__overlay__ {
			pitft2_pins: pitft2_pins {
				brcm,pins = <13 12>;
				brcm,function = <1 1>; /* Set as output */
			};
		};
	};

	/****************************************************************************
	 * LCD_0 ILI9488 device node on SPI1 CE0
	 ****************************************************************************/
	fragment@7 {
		target = <&spi1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;

			pitft0: pitft0@0 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft0_pins>;

				reg = <0>; /* CE0 */
				spi-max-frequency = <20000000>;

				rotation = <0>;
				reset-gpios = <&gpio 24 0>;
				dc-gpios = <&gpio 25 0>;
				backlight = <&backlight>;
			};
		};
	};

	/****************************************************************************
	 * LCD_1 ILI9488 device node on SPI1 CE1
	 ****************************************************************************/
	fragment@8 {
		target = <&spi1>;
		__overlay__ {
			pitft1: pitft1@1 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft1_pins>;

				reg = <1>; /* CE1 */
				spi-max-frequency = <20000000>;

				rotation = <0>;
				reset-gpios = <&gpio 23 0>;
				dc-gpios = <&gpio 22 0>;
				backlight = <&backlight>;
			};
		};
	};

	/****************************************************************************
	 * LCD_2 ILI9488 device node on SPI1 CE2
	 ****************************************************************************/
	fragment@9 {
		target = <&spi1>;
		__overlay__ {
			pitft2: pitft2@2 {
				compatible = "ili9488";
				pinctrl-names = "default";
				pinctrl-0 = <&pitft2_pins>;

				reg = <2>; /* CE2 */
				spi-max-frequency = <20000000>;

				rotation = <0>;
				reset-gpios = <&gpio 13 0>;
				dc-gpios = <&gpio 12 0>;
				backlight = <&backlight>;
			};
		};
	};

	/****************************************************************************
	 * Shared backlight control for all panels
	 ****************************************************************************/
	fragment@10 {
		target-path = "/soc";
		__overlay__ {
			backlight: backlight {
				compatible = "gpio-backlight";
				gpios = <&gpio 27 0>;
			};
		};
	};

	/****************************************************************************
	 * Overridable parameters for speed and rotation
	 ****************************************************************************/
	__overrides__ {
		speed = <&pitft0>,"spi-max-frequency:0", <&pitft1>,"spi-max-frequency:0", <&pitft2>,"spi-max-frequency:0";
		rotation = <&pitft0>,"rotation:0", <&pitft1>,"rotation:0", <&pitft2>,"rotation:0";
	};
};
