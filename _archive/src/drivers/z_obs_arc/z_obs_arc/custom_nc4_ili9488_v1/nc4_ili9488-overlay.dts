/dts-v1/;
/plugin/;

/ {
    fragment@0 {
        target = <&spi0>;
        __overlay__ {
            status = "okay";

            ili9488_0: ili9488-panel@0 {
                compatible = "mycompany,ili9488";
                reg = <0>; /* CE0 */
                dc-gpios = <&gpio 25 0>;
                reset-gpios = <&gpio 24 0>;
                backlight-gpios = <&gpio 18 0>;
            };

            ili9488_1: ili9488-panel@1 {
                compatible = "mycompany,ili9488";
                reg = <1>; /* CE1 */
                dc-gpios = <&gpio 27 0>;
                reset-gpios = <&gpio 23 0>;
                backlight-gpios = <&gpio 18 0>;
            };

            // Example for a third panel:
            /*
            ili9488_2: ili9488-panel@2 {
                compatible = "mycompany,ili9488";
                reg = <2>; // Another CE line if available
                dc-gpios = <&gpio 22 0>;
                reset-gpios = <&gpio 5 0>;
                backlight-gpios = <&gpio 18 0>;
            };
            */
        };
    };
};
